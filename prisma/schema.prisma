generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String  @id @default(uuid())
  title       String
  description String
  columnId    String
  assigneeId  String
  teamId      String
  priority    String
}

model User {
  id      String   @id @default(uuid())
  name    String
  email   String   @unique
  role    String
  teamIds String
}

model Team {
  id         String   @id @default(uuid())
  name       String
  description String
  memberIds  String
  color      String
}